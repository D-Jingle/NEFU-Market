.container{
  font-size: 30rpx;
}
.container{
  padding: 10px 0;
  margin: 0;
}
.page-body{
  width: 100%;
}
.images-wrapper {
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.images-wrapper-text {
  font-size: 28rpx;
}
.images-list {
  display: flex;
  margin-top: 20rpx;
  flex-wrap: wrap;
}
.images-image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}
.image-plus {
  border: 1px solid #999;
  position: relative;
}
.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}
.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}
.section{
  padding:0 0 0 57rpx;
  background-color:#fff;
  width: 60%;
}

.section3{
  padding:20rpx 30rpx;
  background-color:#fff;
  height: 300rpx;
}
.section3 input{
  height: 300rpx;
}
.iss-txt{
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.holder{
  width: 90%;
  height: 4rpx;
}
.submit{
  margin: 0 20rpx;
}
.picker{
  padding: 6rpx 30rpx;
  background-color: #FFFFFF;
  display: flex;
}
.select_title{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 0 15rpx;
  color: #999;
  font-size: 28rpx;
}
.container-min{
  border-bottom: 1px solid #d9d9d9;
  display: flex;
  flex-direction: row;
  padding: 15rpx 10rpx 15rpx 10rpx;
}
.container-max{
  border-bottom: 1px solid #d9d9d9;
}
.left{
  line-height: 1.4rem;
  padding-left: 30rpx;
}
.money{
  width: 92%;
}
.delete{
  height:40rpx;
  width:40rpx;
  background-size:cover;
  background-position:center;
  position:absolute;
}