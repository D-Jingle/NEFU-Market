@import "../../common/item.wxss";
.index{
  background-color: #FBF9FE;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  flex: 1;
  min-height: 100%;
  font-size: 32rpx;
}
#search-box{
  height:80rpx;
  background: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
#search-ipt{
  border:1px solid #1AAD19;
  border-radius: 50px;
  width:100%;
  text-align: center;
  font-size: 24rpx;
  height: 70%;
}
.body{
  padding-left: 30rpx;
  padding-right: 30rpx;
  overflow: hidden;
}
.title{
  font-size: 52rpx;
  color:#e4393c;
  font-weight:bold;
}
.desc{
  margin-top: 10rpx;
  color: #888888;
  font-size: 28rpx;
}
.banner{
  width:100%;
  height:234rpx;
}
.banner swiper{
  height:100%;
}
.slide-image{
  display:block;
  width:100%;
  height:100%;
}
.menu-wrp {
  width:100%;
  /* margin-top:20rpx; */
}
.menu-wrp:after{
  content:"";
  display:block;
  clear:both;
}
.menu-list{
  float:left;
  width:25%;
  box-sizing: border-box;
  padding: 10px 0;
}

.menu-img{
  width:80rpx;
  height:80rpx;
  display:block;
  margin:0 auto;
  margin-bottom:5px;
}
.menu-desc{
  color:#333333;
  width:100%;
  text-align: center;
  display:block;
  font-size:12px;
}
.gap-1{
  width:100%;
  height:10rpx;
  background:rgb(238, 238, 238);
}


.tb-toppest{
  display:flex;
  width: 100%;
  height:60rpx;
  vertical-align: middle;
  flex-direction: row;
  justify-content: center;
  align-content: center;
}
.tb-toppest .btn{
  border:1px solid #e4393c;
  color:#e4393c;
  text-align:center;
  display: inline-block;
  font-size:11px;
  width:70rpx;
  height:40rpx;
  margin-top:14rpx;
  line-height:37rpx;
  margin-left:30rpx;
  border-radius:4px;
}
.tb-toppest .content{
  font-size:36rpx;
  flex-direction: row;
  line-height: 60rpx;
}
.tb-toppest .recommend{
  height: 40rpx;
  width: 40rpx;
  margin: 10rpx 20rpx;
}





