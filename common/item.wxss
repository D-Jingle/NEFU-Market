.banner-info-box{
width: 90%;
height: auto;
padding: 20rpx 40rpx;
overflow: hidden;
border-bottom:1px solid #eee;
}
.banner-info-text{
width: 690rpx;
height: 70rpx;
display: flex;
flex-direction: row;
padding-left: 10rpx;
}
.banner-info-user{
width: 550rpx;
height: 100%;
display: flex;
flex-direction: row;
}
.banner-info-intr{
margin: 10rpx 10rpx 0 10rpx;
width: 94%;
font-size: 30rpx;
}
.banner-info-intr .text{
height: 80rpx;
overflow: hidden;
line-height: 40rpx;
margin: 0rpx 0 8rpx 0;
font-size: 26rpx
}
.banner-info-img{
height: 100%;
white-space:nowrap;
width:100%;
margin:5rpx 0 10rpx 10rpx;
}
.banner-info-img view{
width: 160rpx;
height: 160rpx;
overflow: hidden;
background-size: cover;
background-position: center;
margin: 3rpx;
display: inline-block;
}

.banner-info-money{
width: 200rpx;
height: auto;
font-size: 34rpx;
padding-top: 30rpx;
color: red;
}
.intr-title{
font-size:30rpx;
line-height:50rpx;
font-weight:700;
}
.banner-info-head{
width: 70rpx;
height: 70rpx;
}
.banner-info-box2{
display: flex;
flex-direction: column;
width: 470rpx;
height: 100%;
padding-left: 20rpx;
}
.banner-info-usnm{
height: 45%;
width: auto;
font-size: 28rpx;
}
.banner-info-time{
height: 40%;
width: auto;
font-size: 25rpx;
padding-top: 8rpx;
color: #aaa;
}
.banner-user-img{
width: 100%;
height: 100%;
}
.views{
color:#bbb;
font-size:25rpx;
padding-left:30rpx;
}
.gap-3{
  display: flex;
  justify-content: center;
  font-size:26rpx;
  padding: 18rpx;
  color: #aaa; 
  align-items: center;
  width: 100%;
  height: 26rpx;
  background-color: #fff;
}
.gap-3 image{
  height: 30rpx;
  width: 30rpx;
}
